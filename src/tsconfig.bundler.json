{
  "compilerOptions": {
    "target": "ESNext", 
    "esModuleInterop": true,
    "isolatedModules": true, 
    "allowSyntheticDefaultImports": true,
    "module": "ESNext", 
    "moduleResolution": "node", 
    "lib": [ "ESNext", "DOM" ], 
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "declaration": true,
    "strict": true, 
    "skipLibCheck": true, 
  },
  "exclude": [ 
    "utils/**/*", 
    "_test/**/*", 
  ],
}